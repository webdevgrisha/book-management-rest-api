{
  "name": "book-management",
  "version": "1.0.0",
  "description": "",
  "license": "ISC",
  "author": "Ryhor Roi",
  "type": "module",
  "main": "index.js",
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  },
  "scripts": {
    "tsc:watch": "tsc --watch",
    "swagger:bundle": "mkdir -p ./dist/docs && swagger-cli bundle ./src/docs/swagger.yaml --outfile ./dist/docs/swagger.yaml --type yaml",
    "swagger:watch": "nodemon --watch src/docs --ext yaml --exec \"npm run swagger:bundle\"",
    "build": "rimraf ./dist && tsc && tsc-alias && npm run swagger:bundle",
    "dev": "concurrently \"npm run swagger:watch\" \"npm run tsc:watch\" \"wait-on dist/index.js && nodemon dist/index.js\"",
    "start": "node dist/index.js",
    "lint": "eslint .",
    "format": "prettier --write \"src/**/*.{ts,js,json,md}\"",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:unit": "vitest run src/__tests__/unit",
    "test:integration": "vitest run src/__tests__/integration"
  },
  "dependencies": {
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "pg": "^8.16.0",
    "swagger-ui-express": "^5.0.1",
    "validator": "^13.15.15",
    "winston": "^3.17.0",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "@apidevtools/swagger-cli": "^4.0.4",
    "@eslint/js": "^9.28.0",
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.2",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.15.30",
    "@types/pg": "^8.15.4",
    "@types/supertest": "^6.0.3",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/validator": "^13.15.1",
    "@types/winston": "^2.4.4",
    "@types/yamljs": "^0.2.34",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "concurrently": "^9.1.2",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-vitest": "^0.5.4",
    "globals": "^16.2.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.5.3",
    "rimraf": "^6.0.1",
    "supertest": "^7.1.1",
    "typescript": "5.5",
    "vitest": "^3.2.2",
    "wait-on": "^8.0.3"
  }
}
